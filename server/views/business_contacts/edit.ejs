<div class="container">
    <div class="row">
        <div class="center">
        <h1 class="orange"><%= title %></h1>
            <form class="form" method="post">
                <div class="border">
                <!--Contact Name-->
                <div class="form group">
                    <br>
                    <label for="nameTextField">Contact Name: </label>
                    <input type="text" class="form control"
                    id="nameTextField"
                    placeholder="Enter Contact Name"
                    name="contact_name" 
                    value="<%= contact.contact_name %>"
                    required>
                </div>
                <!--Contact Number-->
                <div class="form group">
                    <label for="contactNumberTextField">Contact Number: </label>
                    <input type="text" class="form control"
                    id="numberTextField"
                    placeholder="Enter the Contact Number"
                    name="contact_number" 
                    value="<%= contact.contact_number %>"
                    required>
                </div>

                <!--Contact Email-->
                 <div class="form group">
                    <label for="contactEmailTextField">Contact Email: </label>
                    <input type="text" class="form control"
                    id="publishedTextField"
                    placeholder="Enter Contact Email"
                    name="contact_email" 
                    value="<%= contact.contact_email %>"
                    required>
                 </div>
                 <br>
                    <!--Submit Button-->
                    <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                    <!--Delete Button-->
                    <a href="/business_contacts-list/delete/<%= contact._id%>" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete </a>
                    <!--Cancel Button-->
                    <a href="/business_contacts-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
        </form>
    </div>
        </div>
    </div>
</div>

