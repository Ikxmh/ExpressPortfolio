<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-4 col-md-9">
        <h1><%= title %></h1>
            <form class="form" method="post">
                <div class="form group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form control"
                    id="nameTextField"
                    placeholder="Enter Contact Name"
                    name="contact_name" 
                    value="<% business_contacts.contact_name %>"
                    required>
                </div>
                    <div class="form group">
                    <label for="contactNumberTextField">Contact Number</label>
                    <input type="text" class="form control"
                    id="numberTextField"
                    placeholder="Enter the Contact Number"
                    name="contact_number" 
                    value="<% business_contacts.contact_number %>"
                    required>
                </div>
                 <div class="form group">
                    <label for="contactEmailTextField">Contact Email</label>
                    <input type="text" class="form control"
                    id="publishedTextField"
                    placeholder="Enter Contact Email"
                    name="contact_email" 
                    value="<% business_contacts.contact_email %>"
                    required>
                </div>
                    <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/business_contacts-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
        </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>