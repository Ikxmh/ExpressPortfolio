<!--Main Content -->
<body>
  <main class="container">
   

   
  <div class="row">
      <div class="offset-md-1 col-md-10">
          <h1 class="orange">Contact Lists</h1>
         
          <% if(typeof displayName == 'string' && displayName) { %>
            <div class="center">
              <a href="/business_contacts-list/add" class="btn btn-primary"role="button">
              <i class="fas fa-plus-circle"></i> Add a Contact</a>
            </div>
          <% } %>
          <br>
          <table class ="table table.table-bordered table-striped table-hover">
              <!--Header Row-->
              <tr class="d-flex">
              <% if(typeof displayName == 'string' && displayName) { %>
                  <th class="text-center col-4">Contact's Name</th>
                  <th class="text-center col-4">Contact's Number</th>
                  <th class="text-center col-2">Contact's Email Address</th>
                  <th class="text-center col-1"></th>
                  <th class="text-center col-1"></th>
                <% } else { %>
                  <th class="text-center col-4">Contact's Name</th>
                  <th class="text-center col-4">Contact's Number</th>
                  <th class="text-center col-3">Contact's Email Address</th>
                <% } %>
            </tr>
        
          <!--Repeatable Template Row-->
              <% for(let count = 0; count < ContactList.length; count++) { %>
                <tr class="d-flex">
                  
                <% if(typeof displayName == 'string' && displayName) { %>
                    <td class="text-center col-4"><%= ContactList[count].contact_name %></td>
                    
                        <td class="text-center col-4"><%= ContactList[count].contact_number %></td>
                        <td class="text-center col-2"><%= ContactList[count].contact_email %></td>
                        <td class="text-center col-1">
                          <a href="/business_contacts-list/edit/<%= ContactList[count]._id%>" class="btn btn-primary">
                          <i class="fas fa-pencil-alt"></i> Edit </a>
                        </td>
                    

                        <td class="text-center col-1">
                          <a href="/business_contacts-list/delete/<%= ContactList[count]._id%>" class="btn btn-danger">
                          <i class="fas fa-trash-alt"></i>Delete</a>
                        </td>
                <% } else { %>
                        <td class="text-center col-4"><%= ContactList[count].contact_name %></td>
                        <td class="text-center col-4"><%= ContactList[count].contact_number %></td>
                        <td class="text-center col-3"><%= ContactList[count].contact_email %></td>
                        
                <% } %>   
                </tr>
            <% } %>
         </table>
    </div>
  </div>
  </main>
</body>

