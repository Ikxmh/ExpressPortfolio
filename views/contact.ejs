<%- include partials/header.ejs %>
<%- include partials/main_nav.ejs %>



<section class="mb-4">
<div class="border">
  <!--Section heading-->
  <h2 class="h1-responsive font-weight-bold text-center my-4">Contact Me</h2>
  <!--Section description-->
  <div class="row">

      <!--Grid column-->
      <div class="col-md-9 mb-md-0 mb-5">
          <form id="contact-form" name="contact-form"  method="POST" onsubmit="return checkValueMissing()">
              <!--Grid row-->
              <div class="row">

                  <!--Grid column-->
                  <div class="col-md-6">
                      <div class="md-form mb-0">
                        <label for="name" class="">Your name</label>
                          <input type="text" id="name" name="name" class="form-control">
                          <p></p>
                      </div>
                  </div>
                  <!--Grid column-->

                  <!--Grid column-->
                  <div class="col-md-6">
                      <div class="md-form mb-0">
                        <label for="email" class="">Your email</label>
                          <input type="text" id="email" name="email" class="form-control">
                          <p id="nameError" class="errorMsg"></p>
                          
                      </div>
                  </div>
                  <!--Grid column-->

              </div>
              <!--Grid row-->

              <!--Grid row-->
              <div class="row">
                  <div class="col-md-12">
                      <div class="md-form mb-0">
                        <label for="subject" class="">Subject</label>
                          <input type="text" id="subject" name="subject" class="form-control">
                      </div>
                  </div>
              </div>
              <!--Grid row-->

              <!--Grid row-->
              <div class="row">

                  <!--Grid column-->
                  <div class="col-md-12">
                      <div class="md-form">
                        <label for="message">Your message</label>
                          <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>
                      </div>
                  </div>
              </div>
              
          
          <!--Grid row-->
          <div class="text-center text-md-left">
              <a class="btn btn-primary" type="submit" name="submit">Send</a>
          </div>
          <div class="status"></div>
      </div>
    </form>
      <!--Grid column-->

      <!--Grid column-- Visuals for my contacts information-->
      <div class="col-md-3 text-center">
          <ul class="list-unstyled mb-0">
              <li><i class="fas fa-phone mt-4 fa-2x"></i>
                  <p>(647) 533-9063</p>
              </li>

              <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                  <p>ikam.hundal@gmail.com</p>
              </li>
          </ul>
      </div>
      <!--Grid column-->

  </div>
</div>
</section>


