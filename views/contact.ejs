<%- include partials/header.ejs %>
<%- include partials/main_nav.ejs %>



<h2 class="orange">Contact Me!</h2>
<%- include partials/start_border.ejs %>
  <!--Section description-->
  <div class="row">
   
    <!--Found the structure online but modified it to my needs https://mdbootstrap.com/docs/b4/jquery/forms/contact/-->
     
    <!--Contact Me Section-->
      <div class="col-md-9 mb-md-0 mb-5">
        <form action="/home">
              <div class="row">
                  <!--Name-->
                  <div class="col-md-6">
                      <div class="md-form mb-0">
                        <label for="name" class="">Your name</label>
                          <input type="text" id="name" name="name" class="form-control" required>
                      </div>
                  </div>
                  

                  <!--Email-->
                  <div class="col-md-6">
                      <div class="md-form mb-0">
                        <label for="email" class="">Your email</label>
                          <input type="text" id="email" name="email" class="form-control" required>       
                      </div>
                  </div>
              </div>

              <!--Subject-->
              <div class="row">
                  <div class="col-md-12">
                      <div class="md-form mb-0">
                        <label for="subject" class="">Subject</label>
                          <input type="text" id="subject" name="subject" class="form-control" required>
                      </div>
                  </div>
              </div>

              <!--Message-->
              <div class="row">
                  <div class="col-md-12">
                      <div class="md-form">
                        <label for="message">Your message</label>
                          <textarea type="text" id="message" name="message" rows="4" class="form-control md-textarea" required></textarea>
                      </div>
                  </div>
              </div>
              
          
          <!--Submit Button-->
          <div class="text-center text-md-left">
              <button class="btn btn-dark btn-sm" type="submit" name="submit">Submit</button>
          </div>
        </form>
      </div>
    

      <!--Visuals for my contacts information-->
      <div class="col-md-3 text-center">
          <ul class="list-unstyled mb-0">
              <li><i class="fas fa-phone mt-4 fa-2x"></i>
                  <p>(647) 533-9063</p>
              </li>

              <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                <p></p>
                  <a>ikam.hundal@gmail.com</a>
              </li>
          </ul>
        
      </div>
  </div>
